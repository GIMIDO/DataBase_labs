@model WebApp.Models.EventIndexViewModel
<h3>
    Изменение записи
</h3>
@using (Html.BeginForm("UpdateEvent", "Event", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.Id)
        <div class="col-md-10">
            <select name="Id">
                @foreach (var id in Model.Ids)
                {
                    <option>@id</option>
                }
            </select>
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Name)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Unit)
        <div class="col-md-10">
            <select name="Unit">
                @foreach (var name in Model.FilterUnits)
                {
                    <option>@name</option>
                }
            </select>
        </div>
    </div>
    <div>
        <div>
            <input type="submit" class="btn btn-default" value="Изменить" />
        </div>
    </div>
}

